{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["suite", "dataset", "ts", "counts", "metrics", "failures", "hashes"],
  "properties": {
    "suite": {
      "type": "string",
      "enum": ["defs", "concepts", "trouble"]
    },
    "dataset": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "counts": {
      "type": "object",
      "required": ["total", "ok"],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0
        },
        "ok": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "metrics": {
      "type": "object",
      "required": ["latency_ms"],
      "properties": {
        "intent_acc": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "target_acc": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "p_at_3": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "ndcg_at_3": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "latency_ms": {
          "type": "object",
          "required": ["p50", "p95", "p99", "avg"],
          "properties": {
            "p50": {
              "type": "number",
              "minimum": 0.0
            },
            "p95": {
              "type": "number",
              "minimum": 0.0
            },
            "p99": {
              "type": "number",
              "minimum": 0.0
            },
            "avg": {
              "type": "number",
              "minimum": 0.0
            }
          }
        },
        "faithfulness": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "citation_validity": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "pass_min_steps": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "deterministic": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    },
    "failures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "reason"],
        "properties": {
          "id": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          }
        }
      }
    },
    "hashes": {
      "type": "object",
      "required": ["dataset_sha256", "code_rev"],
      "properties": {
        "dataset_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "code_rev": {
          "type": "string"
        }
      }
    }
  }
}
